<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:v="clr-namespace:Frontend.Views"
             xmlns:vm="clr-namespace:Frontend.ViewModels"
             BackgroundColor="OrangeRed"
             x:Name="this"
             x:Class="Frontend.MainPage">

    
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>


    <!-- Riferimento menù: https://github.com/dotnet/maui/issues/5382 -->
    <ContentPage.MenuBarItems >
        <MenuBarItem Text="File" BindingContext="{Binding}" >
            <MenuFlyoutItem Text="Nuovo" Command="{Binding NewProgram}"/>
            <MenuFlyoutItem Text="Salva" Command="{Binding SaveProgram}"/>
            <MenuFlyoutItem Text="Carica Scena" Command="{Binding LoadProgram}"/>
            <MenuFlyoutItem Text="Exit" Command="{Binding Exit}"/>
        </MenuBarItem>

        <MenuBarItem Text="Programma" BindingContext="{Binding}">
            <MenuFlyoutItem Text="Start" Command="{Binding StartProgram}"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>


    <Grid
        x:Name="mainGrid"
        RowDefinitions="*"
        ColumnDefinitions="Auto, *" >

        <v:BlockTypeView/>

        <v:BlockView
            Grid.Column="1"
            />

    </Grid>



</ContentPage>
